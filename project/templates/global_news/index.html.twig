{% extends 'base.html.twig' %}

{% block title %}GlobalNews index{% endblock %}

{% block body %}
    <h1>GlobalNews index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>ImageName</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for global_news in global_news %}
            <tr>
                <td>{{ global_news.id }}</td>
                <td>{{ global_news.title }}</td>
                <td>{{ global_news.description }}</td>
                <td>{{ global_news.imageName }}</td>
                <td>{{ global_news.updatedAt ? global_news.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_global_news_show', {'id': global_news.id}) }}">show</a>
                    <a href="{{ path('app_global_news_edit', {'id': global_news.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_global_news_new') }}">Create new</a>
{% endblock %}
